# Log Ingestion Service Environment Configuration
# Copy this file to .env and customize for your environment
# cp .env.example .env

# =============================================================================
# Server Configuration
# =============================================================================

# Server host address (default: 0.0.0.0)
LOG_INGESTION_SERVER_HOST=0.0.0.0

# Server port (default: 8080)
LOG_INGESTION_SERVER_PORT=8080

# =============================================================================
# Database Configuration
# =============================================================================

# Database host (default: localhost)
# For Docker Compose, use 'timescaledb' as the service name
LOG_INGESTION_DB_HOST=localhost

# Database port (default: 5432)
LOG_INGESTION_DB_PORT=5432

# Database user (default: postgres)
LOG_INGESTION_DB_USER=postgres

# Database password (default: postgres)
# IMPORTANT: Change this in production!
LOG_INGESTION_DB_PASSWORD=postgres

# Database name (default: logs)
LOG_INGESTION_DB_NAME=logs

# SSL mode for database connection (default: disable)
# Options: disable, require, verify-ca, verify-full
# For production, use 'prefer' or 'require'
LOG_INGESTION_DB_SSLMODE=disable

# =============================================================================
# Batch Processing Configuration
# =============================================================================

# Number of logs to batch before flushing (default: 1000)
LOG_INGESTION_BATCH_SIZE=1000

# Time interval to flush batches even if not full (default: 5s)
# Format: duration string (e.g., "5s", "10m", "1h")
LOG_INGESTION_BATCH_FLUSH_INTERVAL=5s

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Enable rate limiting (default: true)
# Set to 'false' to disable rate limiting
LOG_INGESTION_RATELIMIT_ENABLED=true

# Default requests per second per API key (default: 100)
LOG_INGESTION_RATELIMIT_DEFAULT_RPS=100

# Burst size - maximum number of requests allowed in a single burst (default: 200)
LOG_INGESTION_RATELIMIT_BURST=200

# =============================================================================
# Authentication Configuration
# =============================================================================

# API keys for regular API access (comma-separated, no spaces)
# REQUIRED: At least one API key must be provided for API endpoints
# Example: key1,key2,key3
LOG_INGESTION_API_KEYS=your-api-key-here

# Admin API keys for admin endpoints (comma-separated, no spaces)
# REQUIRED: At least one admin API key must be provided for admin endpoints
# Example: admin-key1,admin-key2
LOG_INGESTION_ADMIN_API_KEYS=your-admin-api-key-here
