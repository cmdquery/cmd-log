# Environment Configuration Example
# Copy this file to .env and update with your values
# 
# For local development: cp .env.example .env
# Or use: make env

# =============================================================================
# Database Configuration
# =============================================================================
# These are used by docker-compose.prod.yml for the TimescaleDB container

# Database password (generate with: openssl rand -base64 32)
DB_PASSWORD=postgres

# Database user
DB_USER=postgres

# Database name
DB_NAME=logs

# Database port
DB_PORT=5432

# SSL mode for database connection (disable, allow, prefer, require, verify-ca, verify-full)
DB_SSLMODE=prefer

# =============================================================================
# Server Configuration
# =============================================================================
# These are used by docker-compose.prod.yml

# Server host (0.0.0.0 to listen on all interfaces)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=8080

# =============================================================================
# Application Configuration
# =============================================================================
# These are used by docker-compose.prod.yml

# Batch processing size
BATCH_SIZE=1000

# Batch flush interval
BATCH_FLUSH_INTERVAL=5s

# =============================================================================
# Rate Limiting Configuration
# =============================================================================

# Enable rate limiting
RATELIMIT_ENABLED=true

# Default requests per second per API key
RATELIMIT_DEFAULT_RPS=100

# Burst size
RATELIMIT_BURST=200

# =============================================================================
# Authentication Configuration
# =============================================================================

# API keys (comma-separated list)
# Generate secure keys with: openssl rand -hex 32
# Example: API_KEYS=key1,key2,key3
API_KEYS=your-api-key-1,your-api-key-2
